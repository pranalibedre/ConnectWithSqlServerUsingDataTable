@model IEnumerable<SampleMVC.Models.PersonContext>


<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Gender
        </th>
        <th>
            Age
        </th>
        <th>
            Date of Birth
        </th>
        <th>
            Email
        </th>
        <th>
            Telephone No
        </th>
        <th>
            Country
        </th>
        <th>
            State
        </th>
        <th>
            Address Line 1
        </th>
        <th>
            Address Line 2
        </th>
        <th>
            City
        </th>
        <th>
            Pincode
        </th>
        <th>
            Action
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(m => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(m => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(m => item.Age)
            </td>
            <td>
                @Html.DisplayFor(m => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(m => item.Email)
            </td>
            <td>
                @Html.DisplayFor(m => item.TelephoneNo)
            </td>
            <td>
                @Html.DisplayFor(m => item.SelectedCountry)
            </td>
            <td>
                @Html.DisplayFor(m => item.SelectedState)
            </td>
            <td>
                @Html.DisplayFor(m => item.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(m => item.AddressLine2)
            </td>
            <td>
                @Html.DisplayFor(m => item.City)
            </td>
            <td>
                @Html.DisplayFor(m => item.PinCode)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { personId = item.PersonId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Edit", "Add", "Person", new { personId = item.PersonId }, new { @class = "btn btn-success" })

            </td>
        </tr>
    }
</table>

